<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CUTIEPIE</title>
    <!-- link to css -->
    <link rel="stylesheet" href="stylecheckout.css" />
    <!-- box icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css"
    />

    <link rel="icon" href="images/cute/rosecolor.png" type="image/x-icon" />
    <link
      rel="shortcut icon"
      href="images/cute/rosecolor.png"
      type="image/x-icon"
    />
  </head>
  <body>
    <header>
      <!-- logo -->
      <a href="/index" class="logo"
        ><img
          title="CUTIEPIE"
          src="images/cute/rosecolor.png"
          alt=""
        />CUTIEPIE</a
      >
    </header>

    <section class="checkOut" id="checkOut">
      <!---- title ------------------------------------->
      <div class="title-container">
        <h1 class="title">Check Out</h1>
      </div>
      <!----video code ------------------------------------->
      <div class="container">
        <div class="checkoutLayout">
          <div class="returnCart">
            <a href="/index#products" class="keep"> << Keep Shopping</a>
            <h1>List Product In Cart</h1>
            <div class="list">
              <!-- <div class="item">
                <img src="images/cute/products/1.png" alt="" />
                <div class="info">
                  <div class="name">PRODUCT 1</div>
                  <div class="price">20 DH</div>
                </div>
                <div class="quantity">1</div>
                <div class="returnPrice">50DH</div>
              </div> -->
            </div>
          </div>
          <div class="right">
            <h1>PURCHASE DETAILS</h1>
            <form id="orderForm" action="/checkout" method="post">
              <div class="form">
                <div class="group">
                  <label for="fullName">Full Name</label>
                  <input
                    type="text"
                    id="fullName"
                    name="fullName"
                    required
                    autocomplete="off"
                  />
                </div>
                <div class="group">
                  <label for="phoneNumber">Phone Number</label>
                  <input
                    type="text"
                    id="phoneNumber"
                    name="phoneNumber"
                    required
                    autocomplete="off"
                  />
                </div>
                <div class="group">
                  <label for="address">Address</label>
                  <input
                    type="text"
                    id="address"
                    name="address"
                    required
                    autocomplete="off"
                  />
                </div>
                <div class="group">
                  <label for="city">City:</label>
                  <select name="city" id="city" autocomplete="address-level2">
                    <option value="">Choose..</option>
                    <option value="Agadir">Agadir</option>
                    <option value="Benimalal">Benimalal</option>
                    <option value="Berchid">Berchid</option>
                    <option value="Casablanca">Casablanca</option>
                    <option value="Chefchaoun">Chefchaoun</option>
                    <option value="Dakhla">Dakhla</option>
                    <option value="Eljadida">Eljadida</option>
                    <option value="Fes">Fes</option>
                    <option value="Maknes">Maknes</option>
                    <option value="Marrakech">Marrakech</option>
                    <option value="Mohammedia">Mohammedia</option>
                    <option value="Oujda">Oujda</option>
                    <option value="Rabat">Rabat</option>
                    <option value="Settat">Settat</option>
                    <option value="Tafraout">Tafraout</option>
                    <option value="Tanger">Tanger</option>
                  </select>
                </div>
              </div>
            </form>
            <div class="return">
              <div class="row">
                <div>Total Quantity</div>
                <div class="totalQuantity">6</div>
              </div>
              <div class="row">
                <div>Total Price</div>
                <div class="totalPrice">60DH</div>
              </div>
            </div>
            <button
              href="/index"
              type="submit"
              class="buttonCheckout"
              id="checkoutbtn"
            >
              CHECKOUT
            </button>
          </div>
        </div>
      </div>

      <!-- LINK TO JS -->
      <script src="maincheckout.js"></script>
    </section>
  </body>
</html>
